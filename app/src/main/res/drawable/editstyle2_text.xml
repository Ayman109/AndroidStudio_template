<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <padding android:bottom="8px"  android:top="8px" android:right="8px" android:left="8px"/>
        </shape>
    </item>

    <item
    android:state_focused="false"
    android:state_enabled="true"
        android:top="-5dp"
        android:left="-5dp"
        android:right="-5dp"
        android:bottom="-1dp"
        >

    <shape android:shape="rectangle">
        <stroke android:width="2dp" android:color="@color/gris"/>
    </shape>

</item>
    <item
        android:state_focused="true"
        android:state_enabled="true"
        android:top="-5dp"
        android:left="-5dp"
        android:right="-5dp"
        android:bottom="-1dp"
        >

        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/Primary"/>
        </shape>

    </item>

</layer-list>