<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        android:state_selected="false"
        android:state_enabled="false"
        android:color="@color/white"
        >
        <shape android:shape="rectangle" >
            <corners android:radius="20px"/>
            <gradient android:startColor="@color/Primary" android:endColor="@color/Seconde" android:angle="45"/>
            <padding android:bottom="4px" android:left="4px" android:right="4px" android:top="4px"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:color="@color/white">
        <shape android:shape="rectangle" >
            <corners android:radius="20px"/>
            <padding android:bottom="4px" android:left="4px" android:right="4px" android:top="4px"/>
            <gradient android:startColor="@color/Seconde" android:endColor="@color/Primary" android:angle="45"/>
        </shape>
    </item>
</selector>